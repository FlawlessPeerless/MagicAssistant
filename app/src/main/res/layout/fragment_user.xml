<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- 头像-->
        <LinearLayout
            android:background="@drawable/user_frgament_bg"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="200dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:src="@drawable/add_pic"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorPrimary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/button_edit_profile"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textSize="14sp"
                android:background="@drawable/button_bg"
                android:textColor="@android:color/white"
                android:text="@string/text_edit_profile"
                android:layout_width="86dp"
                android:layout_height="24dp"/>


        </LinearLayout>

        <!--姓名-->
        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:textSize="18sp"
                android:text="@string/activity_login_hint_username"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_username"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </LinearLayout>

        <!--性别-->
        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:textSize="18sp"
                android:text="@string/text_sex"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_sex"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </LinearLayout>

        <!--年龄-->
        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:textSize="18sp"
                android:text="@string/text_age"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_age"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />
        </LinearLayout>

        <!--简介-->
        <LinearLayout
            android:padding="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:gravity="center"
                android:textSize="18sp"
                android:text="@string/text_description"
                android:layout_width="60dp"
                android:layout_height="wrap_content" />
            <EditText
                android:id="@+id/edit_description"
                android:textColor="@color/colorPrimary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:maxLines="2"/>
        </LinearLayout>

        <Button
            android:id="@+id/button_sure_modify"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"
            android:text="@string/text_sure_modify"
            android:background="@drawable/button_bg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/text_view_recruitment"
            android:textSize="18sp"
            android:layout_margin="15dp"
            android:text="@string/text_recruitment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <include layout="@layout/widget_divider_vertical"/>

        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="@string/text_attribution_query"
            android:textSize="18sp"/>

        <include layout="@layout/widget_divider_vertical"/>

        <Button
            android:id="@+id/button_log_out"
            android:layout_margin="10dp"
            android:textColor="@android:color/white"
            android:background="@drawable/button_bg"
            android:text="@string/text_log_out"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</ScrollView>