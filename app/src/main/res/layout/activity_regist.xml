<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:maxLines="1"
        android:id="@+id/edit_username"
        android:hint="@string/activity_login_hint_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:maxLines="1"
        android:digits="1234567890"
        android:inputType="number"
        android:id="@+id/edit_age"
        android:hint="@string/text_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:hint="@string/text_description"
        android:lines="2"
        android:id="@+id/edit_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <RadioGroup
        android:id="@+id/radio_group_sex"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/radio_button_male"
            android:checked="true"
            android:text="@string/male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <RadioButton
            android:layout_marginLeft="20dp"
            android:id="@+id/radio_button_female"
            android:text="@string/female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>

    <EditText
        android:maxLines="1"
        android:id="@+id/edit_password"
        android:inputType="textPassword"
        android:hint="@string/activity_login_hint_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:maxLines="1"
        android:id="@+id/edit_password_again"
        android:inputType="textPassword"
        android:hint="@string/text_input_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:maxLines="1"
        android:inputType="textEmailAddress"
        android:id="@+id/edit_mailbox"
        android:hint="@string/mailbox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="@string/text_register_hint"
        android:textSize="14sp"
        android:textColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/button_register"
        android:textColor="@android:color/white"
        android:background="@drawable/button_bg"
        android:text="@string/text_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>