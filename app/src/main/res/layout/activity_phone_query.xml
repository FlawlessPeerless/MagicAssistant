<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center_horizontal"
    android:padding="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:hint="@string/hit_phone_query"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        tools:src="@drawable/china_telecom"
        android:layout_width="300dp"
        android:layout_height="150dp" />
    <TextView
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        tools:text="归属地"
        android:id="@+id/text_view_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <!--自定义键盘-->
    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:columnCount="4"
        app:rowCount="3">

        <!--第一行-->
        <Button
            android:id="@+id/btn_1"
            android:textSize="24sp"
            android:text="1"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_row="0"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/btn_2"
            android:textSize="24sp"
            android:text="2"
            app:layout_column="1"
            app:layout_columnSpan="1"
            app:layout_row="0"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/btn_3"
            android:textSize="24sp"
            app:layout_column="2"
            app:layout_columnSpan="1"
            app:layout_row="0"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1"
            android:text="3" />

        <Button
            android:id="@+id/btn_del"
            android:textSize="24sp"
            android:text="del"
            app:layout_column="3"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="0"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <!--第二行-->
        <Button
            android:id="@+id/btn_4"
            android:textSize="24sp"
            android:text="4"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_row="1"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/btn_5"
            android:textSize="24sp"
            android:text="5"
            app:layout_column="1"
            app:layout_columnSpan="1"
            app:layout_row="1"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/btn_6"
            android:textSize="24sp"
            android:text="6"
            app:layout_column="2"
            app:layout_columnSpan="1"
            app:layout_row="1"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/btn_0"
            android:textSize="24sp"
            app:layout_column="3"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="1"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1"
            android:text="0" />

        <!--第三行-->
        <Button
            android:id="@+id/btn_7"
            android:textSize="24sp"
            android:text="7"
            app:layout_column="0"
            app:layout_columnSpan="1"
            app:layout_row="2"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/btn_8"
            android:textSize="24sp"
            android:text="8"
            app:layout_column="1"
            app:layout_columnSpan="1"
            app:layout_row="2"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/btn_9"
            android:textSize="24sp"
            android:text="9"
            app:layout_column="2"
            app:layout_columnSpan="1"
            app:layout_row="2"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/btn_search"
            android:textSize="24sp"
            app:layout_column="3"
            app:layout_columnSpan="1"
            app:layout_columnWeight="1"
            app:layout_row="2"
            app:layout_rowSpan="1"
            app:layout_rowWeight="1"
            android:text="查询" />


    </android.support.v7.widget.GridLayout>

</LinearLayout>