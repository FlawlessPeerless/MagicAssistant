<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="60dp"
        android:minHeight="60dp"
        android:layout_height="match_parent">

        <View
            android:layout_width="2dp"
            android:layout_height="10dp"
            android:background="@android:color/darker_gray"/>
        <ImageView
            android:src="@drawable/timeline_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/text_time_point" />
        <View
            android:layout_width="2dp"
            android:background="@android:color/darker_gray"
            android:layout_height="0dp"
            android:layout_weight="1"/>

    </LinearLayout>

    <!--物流描述-->
    <LinearLayout
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/timeline_content"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        tools:ignore="RtlHardcoded">

        <TextView
            android:id="@+id/text_view_description"
            android:textSize="18sp"
            android:lineSpacingMultiplier="1.2"
            android:paddingLeft="10dp"
            tools:text="您的快件已经到达北京您的快件已经到达北京"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_view_zone"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:textColor="@android:color/holo_red_light"
            android:paddingLeft="10dp"
            tools:text="北京"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_view_datetime"
            android:paddingLeft="10dp"
            tools:text="2018-02-01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>